<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SimilarFiles.user_properties"
    android:id="@+id/propertiesChildFragment">
 <androidx.constraintlayout.widget.ConstraintLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content">
  <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/porpertiesTV"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="5dp"
      android:text="Properties"
      android:fontFamily="@font/robotofont"
      android:textColor="@color/themecolor"
      android:textSize="20sp"
      android:textStyle="bold"
     app:layout_constraintBottom_toTopOf="@id/propertieslist"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />

  <GridView
      android:id="@+id/propertieslist"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:numColumns="2"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/porpertiesTV"
      />
  <ProgressBar
      android:id="@+id/progressBar"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
   app:layout_constraintTop_toTopOf="@id/propertieslist"
   app:layout_constraintBottom_toBottomOf="@id/propertieslist"/>
  <androidx.appcompat.widget.AppCompatImageView
      android:id="@+id/noRecordsFoundIV"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toTopOf="@id/propertieslist"
      app:layout_constraintBottom_toBottomOf="@id/propertieslist"
   android:src="@drawable/norecordsfound"/>
  <androidx.appcompat.widget.AppCompatImageView
      android:id="@+id/checkConnectionIV"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toTopOf="@id/propertieslist"
      app:layout_constraintBottom_toBottomOf="@id/propertieslist"
      android:src="@drawable/checkyourconnection"/>
 </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>